<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:measureAllChildren="true"
        android:padding="@dimen/margintop_8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_128"
            android:layout_gravity="center"
            android:background="@color/orange" />

        <TextView
            android:layout_width="@dimen/dim_350"
            android:layout_height="@dimen/space_64"
            android:layout_gravity="center"
            android:background="@color/red" />

        <TextView
            android:layout_width="@dimen/dim_300"
            android:layout_height="@dimen/dim_32"
            android:layout_gravity="center"
            android:background="@color/blue" />
    </FrameLayout>
</LinearLayout>